// Structs/arrays of clocks

pta

const int k = 1;

module M

	s : [0..3];
	a : struct(c0:clock, c1:array[1] of clock);
	
	[] s=0 & a.c0>=0 -> 0.6 : (s'=1) + 0.4 : (s'=2)&(a.c0'=0);
	[] s=1 & a.c0=0 -> (s'=3);
	[] s=1 & a.c1[k-1]>=6 -> (s'=1)&(a.c1[0]'=0);
	[] s=2 & a.c0=0 & a.c1[0]=2 -> (s'=3)&(a.c1[0]'=0);
	[] s=2 & a.c0>=6 -> (s'=1)&(a.c1[s-2]'=0);
	[] s=3 -> (s'=3);

endmodule

label "target" = s=3;
label "end" = s=3 | s=1;

rewards "time"
	true : 1;
endrewards

