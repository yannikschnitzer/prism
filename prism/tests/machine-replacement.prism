mdp

const int N=25;


module machine
	
	s:[0..N] init 1;  // machine state
	
	[replace] s>0 -> (s'=0);
	[not_replace] s>0 & s<N -> 0.9: (s'=s+1) +  0.1:(s'=s);
	[not_replace] s=N -> (s'=0);

	// terminal state self-loop to avoid deadlock
	[] s=0 -> true;

endmodule 

label "goal" = s=0;

rewards
	[replace] s=N: 10;
	[not_replace] s=N: 30;
endrewards







