mdp

const int M = 5; // represents starting amount
const int MAX_MONEY = 100;
const int STAGES = 10; // number of stages

// Uncertain parameters
// const double p_win; // original 0.7
// const double p_jackpot; // original 0.05
const double e=0.2; // width of uncertain
const double e1=0.05; // width of uncertain

module game
    m:[0..MAX_MONEY] init M; // represents current money
    s:[1..STAGES+1] init 1; // current stage

    // Betting transitions
    [zero] (s < STAGES) ->  (s'=min(s+1, STAGES)) & (m'=m);
    [one] m > 0 & (s < STAGES)-> [0.5-e,0.5+e]:(s'=min(s+1, STAGES)) & (m'=min(m+1, MAX_MONEY)) + [0.1-e1,0.1+e1]: (s'=min(s+1, STAGES)) & (m'=min(m+10, MAX_MONEY)) + [0.4-(e+e1), 0.4+(e+e1)]: (s'=min(s+1, STAGES)) & (m'=max(m-1,0));
    [two] m > 1 & (s < STAGES)-> [0.5-e,0.5+e]:(s'=min(s+1, STAGES)) & (m'=min(m+2, MAX_MONEY)) + [0.1-e1,0.1+e1]: (s'=min(s+1, STAGES)) & (m'=min(m+2*10, MAX_MONEY)) + [0.4-(e+e1), 0.4+(e+e1)]: (s'=min(s+1, STAGES)) & (m'=max(m-2,0));
    [three] m > 2 & (s < STAGES)-> [0.5-e,0.5+e]:(s'=min(s+1, STAGES)) & (m'=min(m+3, MAX_MONEY)) + [0.1-e1,0.1+e1]: (s'=min(s+1, STAGES)) & (m'=min(m+3*10, MAX_MONEY)) +[0.4-(e+e1), 0.4+(e+e1)]: (s'=min(s+1, STAGES)) & (m'=max(m-3,0));
    [four] m > 3 & (s < STAGES)-> [0.5-e,0.5+e]:(s'=min(s+1, STAGES)) & (m'=min(m+4, MAX_MONEY)) + [0.1-e1,0.1+e1]: (s'=min(s+1, STAGES)) & (m'=min(m+4*10, MAX_MONEY)) + [0.4-(e+e1), 0.4+(e+e1)]: (s'=min(s+1, STAGES)) & (m'=max(m-4,0));
    [five] m > 4 & (s < STAGES)-> [0.5-e,0.5+e]:(s'=min(s+1, STAGES)) & (m'=min(m+5, MAX_MONEY)) + [0.1-e1,0.1+e1]: (s'=min(s+1, STAGES)) & (m'=min(m+5*10, MAX_MONEY)) + [0.4-(e+e1), 0.4+(e+e1)]: (s'=min(s+1, STAGES)) & (m'=max(m-5,0));
    [end] s=(STAGES) -> (s'=s+1);
endmodule

label "goal" = (s=STAGES+1);
label "obs" = (m=0);

rewards
    [end] s=STAGES : MAX_MONEY-m;
endrewards