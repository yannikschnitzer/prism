pomdp
observables
start
endobservables
const int N = 10;
const int axMAX = N-1;
const int ayMAX = N-1;
const int axMIN = 0;
const int ayMIN = 0;
const int primaryMinX = axMIN;
const int primaryMinY = ayMIN;
const int primaryMaxX = axMAX;
const int primaryMaxY = ayMAX;
const int borderSize = 2;
const int areaMinX = max(primaryMinX - borderSize, axMIN);
const int areaMinY = max(primaryMinY - borderSize, ayMIN);
const int areaMaxX = min(primaryMaxX + borderSize, axMAX);
const int areaMaxY = min(primaryMaxY + borderSize, ayMAX);
const double slippery = 0.1;
const int ob0x = 9;
const int ob0y = 0;
const int ob1x = 5;
const int ob1y = 1;
const int ob2x = 6;
const int ob2y = 7;
const int ob3x = 2;
const int ob3y = 9;
const int ob4x = 7;
const int ob4y = 4;
const int ob5x = 2;
const int ob5y = 0;
const int ob6x = 0;
const int ob6y = 6;
const int ob7x = 8;
const int ob7y = 7;
const int ob8x = 3;
const int ob8y = 7;
const int ob9x = 3;
const int ob9y = 5;
formula crash = start & ((ax = ob0x & ay = ob0y)|(ax = ob1x & ay = ob1y)|(ax = ob2x & ay = ob2y)|(ax = ob3x & ay = ob3y)|(ax = ob4x & ay = ob4y)|(ax = ob5x & ay = ob5y)|(ax = ob6x & ay = ob6y)|(ax = ob7x & ay = ob7y)|(ax = ob8x & ay = ob8y)|(ax = ob9x & ay = ob9y));
formula done = start & ax = axMAX &  ay = ayMAX ;
observable "amdone" = done;
observable "hascrash" = crash;
module master
start : bool init false;
[placement] !start -> (start'=true);
[north] start & !done -> true;
[south] start  & !done -> true;
[east] start  & !done-> true;
[west] start & !done -> true;
endmodule
module robot
ax : [axMIN..axMAX] init axMIN;
ay : [ayMIN..ayMAX] init ayMIN;
//slipped : bool init false;
[placement] true -> 1/5:(ax'=6) & (ay'=4) + 1/5:(ax'=4) & (ay'=7) + 1/5:(ax'=5) & (ay'=6) + 1/5:(ax'=5) & (ay'=2) + 1/5:(ax'=2) & (ay'=4) ;
[west] true -> (1-slippery): (ax'=max(ax-1,areaMinX)) + slippery: (ax'=max(ax-2,areaMinX));
[east] true -> (1-slippery): (ax'=min(ax+1,areaMaxX)) + slippery: (ax'=min(ax+2,areaMaxX));
[south]  true -> (1-slippery): (ay'=min(ay+1,areaMaxY)) + slippery: (ay'=min(ay+2,areaMaxY));
[north]  true -> (1-slippery): (ay'=max(ay-1,areaMinY)) + slippery: (ay'=max(ay-2,areaMinY));
endmodule
label "goal" = done;
label "traps" = crash;
label "notbad" =  !crash;
rewards "cost"
[north] true : 1;
[south] true : 1;
[west] true : 1;
[east] true : 1;
crash: 5;
endrewards
rewards "cos"
[north] true : 1;
[south] true : 1;
[west] true : 1;
[east] true : 1;
crash: 5;
endrewards
rewards "rew"
done : 20;
endrewards
