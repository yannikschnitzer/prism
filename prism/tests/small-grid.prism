mdp

const double delta = 0.05;

module M

	s : [0..3] init 0;
	
	[east] s=0 -> 1-delta : (s'=1) + delta : (s'=2);
	[south] s=0 -> 1-delta : (s'=2) + delta : (s'=1);

	[west] s=1 -> 1-delta : (s'=3) + delta : (s'=3);
	[south] s=1 -> 1-delta : (s'=3) + delta : (s'=3);

	[east] s=2 -> 1-delta : (s'=3) + delta : (s'=0);
	[north] s=2 -> 1-delta : (s'=0) + delta : (s'=3);

	[west] s=3 -> 1-delta : (s'=3) + delta : (s'=3);
	[north] s=3 -> 1-delta : (s'=3) + delta : (s'=3);

endmodule

rewards
	s=1 : 10;
	s!=1 : 1;
endrewards
